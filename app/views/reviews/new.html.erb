
  <%= form_for [@devtool, @review] do |f| %>
  <div class="row">
    <div class="medium-6 columns">
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.submit "Create Review", class:"button" %>
  </div>
</div>
  <% end %>

<div id="searchbar", class="field row">
  <div class="medium-6 columns">
<%= form_tag(devtools_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], id:"searchbar" %>
    <%= submit_tag "Search", title: nil, class:"button", id:"submitbutton" %>
<% end %>
</div>
</div>

<% if !current_user.nil? && current_user.admin? %>
  <h1>Welcome Super Elite Group 8 member, you are a member
    of an exclusive, Clandestine, and Dope AF club.</h1>
<% end %>

<% if @searched_devtools != nil %>
  <% @searched_devtools.each do |devtool|%>
    <li>
      <%= link_to devtool.title, devtool_path(devtool) %>
      <% if !current_user.nil? && current_user.admin? %>
        <%= link_to 'delete', devtool, method: :delete %>
      <% end %>
    </li>
  <% end %>
<% end %>

<div id="app"> </div>



<%= link_to "Add New Dev Tool", new_devtool_path, class:"expanded button" %>

<div class="hidden">
  <% if @devtools != nil %>
    <% @devtools.each do |devtool|%>
      <li><%= link_to devtool.title, devtool_path(devtool) %>
        <% if !current_user.nil? && current_user.admin? %>
          <%= link_to 'delete', devtool, method: :delete %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</div>
